<script type="text/javascript">
    var materialData = <%- JSON.stringify(materials) %>;
    $(function () {
        $('.selectpicker').selectpicker();

        $('.datepicker').datepicker({
            language: '<%- getLocale() %>',
            autoclose: true,
            clearBtn: true,
            todayHighlight: true
        });
        if ($('#buyDate').val()) {
            $('#buyDateText').datepicker('setUTCDate', new Date($('#buyDate').val() * 1000));
