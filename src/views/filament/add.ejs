        $('#buyDateText').on('changeDate', function () {
            var $this = $(this);
            $('#buyDate').val($this.datepicker('getUTCDate').getTime() / 1000);
        });

        $('textarea#description').keyup(function () {
            var $this = $(this);
            var $preview = $('#description-preview');
            if (!$preview.length) {
                return;
            }
            $preview.html(marked($this.val()));
        }).trigger('keyup');

        $('.color-picker').colorpicker();
        $('.trg-color-select').click(function (e) {
            var $this = $(this);

            e.preventDefault();

            var name = $this.data('name');
            var code = $this.data('code');
            if (name && code) {
                $('#colorName').val(name);
                var parsedColor = App3DPTools.colorParse(code);
                var oldFormat = false;
                if (parsedColor && parsedColor.format) {
                    oldFormat = $('.color-picker').data('colorpicker').format;
                    $('.color-picker').data('colorpicker').format = parsedColor.format;
                }
                $('.color-picker').colorpicker('setValue', code);
                if (parsedColor && parsedColor.format) {
                    $('.color-picker').data('colorpicker').format = oldFormat;
                }
            }
        });

        $('.trg-get-temp-from-material').click(function () {
            var $this = $(this);
            var input = $('#' + $this.data('temp-id'));
            var tempType = $this.data('temp-type');
            var tempField = $this.data('temp-field');

            if (!input.length || !tempType || !tempField) {
                return;
            }
            var selectedMaterialId = $('#material').val();

            if (materialData.length) {
                materialData.forEach(function (material) {
                    if (material._id == selectedMaterialId) {
                        if (material[tempType] && material[tempType][tempField]) {
                            input.val(material[tempType][tempField]);
                        } else {
                            input.val('');
                        }
                    }
                });
            }
        });

        $('.trg-get-density-from-material').click(function () {
            var $this = $(this);
            var input = $('#' + $this.data('density-id'));

            if (!input.length) {
                return;
            }
            var selectedMaterialId = $('#material').val();

            if (materialData.length) {
                materialData.forEach(function (material) {
                    if (material._id == selectedMaterialId) {
                        if (material.density) {
                            input.val(material.density);
                        } else {
                            input.val('');
                        }
                    }
                });
            }
        });
    });
</script>