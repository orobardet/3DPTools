<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><%- __("Login to %s", __(siteTitle)) %></h3>
    </div>
    <div class="panel-body">
        <form class="login-form" method="post">
            <div class="form-group">
                <label for="email" class="sr-only"><%- __('Email address'); %></label>
                <div class="input-group">
                    <div class="input-group-addon">@</div>
                    <input type="email" class="form-control" id="email" name="email" placeholder="<%- __('Email'); %>" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="sr-only"><%- __('Password'); %></label>
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-unlock"></i></div>
                    <input type="password" class="form-control" id="password" name="password"
                           placeholder="<%- __('Password'); %>">
                </div>
            </div>

            <div class="form-group">
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary"><%- __('Login'); %></button>
                </div>
                <% if (locals.showForgotPasswordLink) { -%>
                <a href="/recover-account"><%= __('I forgot my password'); %></a>
                <% } -%>
            </div>
        </form>
    </div>
</div>