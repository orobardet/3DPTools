<% if (locals.primaryColor && primaryColor.code) { %>
<div class="color-preview-container<% if (locals.size == "large") { %> large<% } %>">
    <div class="color-preview"
         <% if (primaryColor.name) { %>
         data-toggle="tooltip" data-placement="<% if (locals.tooltipPlacement) { %><%- locals.tooltipPlacement %><% } else { %>left<% } %>"
         title="<%- primaryColor.name.replace(" ", "&nbsp;") %>"
         <% } %>
        <% if (locals.secondaryColor && secondaryColor.code) { %>
        style="background: linear-gradient(to bottom right, <%- primaryColor.code %> 40%, <%- secondaryColor.code %> 60%);">
        <% } else { %>
        style="background: <%- primaryColor.code %>;">
        <% } %>
    </div>
</div>
<% } %>
