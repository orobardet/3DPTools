#!/usr/bin/env node

'use strict';

const debug = require('debug')('3DPTools:server');
debug('Starting CLI...');
const app = require('../app')({
    loadConfig:true,
    initCliOptions: false,
    initSession: false,
    initDb: true,
    initI18n: true,
    initViews: false,
    initLogger: true,
    initServerTasks: false,
    loadComponents: true,
    loadNavigation: false,
    setupHttpRouting: false
});
const mongoose = require('mongoose');
const consign = require('consign');

app.program = require('commander');
app.cliStop = () => {
    mongoose.connection.close();
    debug('Done.');
};

app.program
    .version(app.config.get('version'));

// Autoload CLI controllers
consign({
    verbose: false
}).include('cli')
    .into(app);

app.on('ready', () => {
    debug('Executing command...');
    app.program.parse(process.argv);

    if (!app.program.args.length) {
        app.program.help();
    }
});